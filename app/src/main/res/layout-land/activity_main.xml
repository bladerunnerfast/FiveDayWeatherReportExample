<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jamessmith.weatherexample1.MainActivity"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tv_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_pressure_lbl"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:id="@+id/tv_country"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginLeft="-11dp"
        android:layout_marginTop="-312dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_location"
        android:textSize="24sp"
        android:text="Location"
        app:layout_constraintTop_toBottomOf="@+id/tv_country"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="23dp" />

    <TextView
        android:id="@+id/tv_main_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_day_lbl"
        app:layout_constraintTop_toBottomOf="@id/tv_day"
        tools:layout_editor_absoluteY="108dp"
        android:layout_marginLeft="17dp" />

    <ImageView
        android:layout_width="145dp"
        android:layout_height="90dp"
        android:id="@+id/iv_icon_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_ground_level_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ground Level:"
        app:layout_constraintLeft_toRightOf="@+id/tv_humidity"
        app:layout_constraintTop_toBottomOf="@+id/tv_pressure_lbl"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:textSize="20sp"
        android:id="@+id/tv_day_lbl"
        app:layout_constraintLeft_toLeftOf="@+id/iv_icon_main"
        app:layout_constraintTop_toBottomOf="@id/tv_day"
        tools:layout_editor_absoluteY="108dp"
        android:layout_marginLeft="182dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_humidity_lbl"
        android:text="Humidity:"
        app:layout_constraintTop_toBottomOf="@id/tv_pressure_lbl"
        app:layout_constraintLeft_toRightOf="@id/iv_icon_main"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="21dp" />

    <TextView
        android:id="@+id/tv_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toRightOf="@+id/tv_humidity_lbl"
        app:layout_constraintTop_toBottomOf="@+id/tv_temp_main"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/tv_pressure_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure:"
        app:layout_constraintLeft_toRightOf="@+id/tv_temp_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_wind_speed_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind Speed:"
        app:layout_constraintLeft_toRightOf="@+id/tv_pressure"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_wind_speed"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="39dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tv_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40mph"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_temp_main_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature:"
        app:layout_constraintLeft_toRightOf="@+id/iv_icon_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="21dp" />

    <TextView
        android:id="@+id/tv_temp_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30c"
        app:layout_constraintLeft_toRightOf="@+id/tv_temp_main_lbl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_ground_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150m"
        app:layout_constraintLeft_toRightOf="@+id/tv_ground_level_lbl"
        app:layout_constraintTop_toBottomOf="@+id/tv_pressure"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/tv_sea_level_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sea Level:"
        app:layout_constraintLeft_toRightOf="@+id/tv_ground_level"
        app:layout_constraintTop_toBottomOf="@+id/tv_wind_speed_lbl"
        app:layout_constraintRight_toLeftOf="@+id/tv_sea_level"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="19dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tv_sea_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100m"
        android:layout_marginRight="27dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_wind_speed"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="19dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_five_day_list"
        android:layout_width="573dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>