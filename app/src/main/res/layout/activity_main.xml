<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jamessmith.weatherexample1.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tv_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="105dp"
        android:text="60"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:id="@+id/tv_country"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintTop_toTopOf="@+id/tv_day"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_location"
        android:textSize="24sp"
        android:text="Location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_country"
        tools:layout_editor_absoluteY="64dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/tv_main_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="203dp"
        android:layout_marginTop="34dp"
        android:text="Status"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_location" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/iv_icon_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_ground_level_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="135dp"
        android:layout_marginTop="13dp"
        android:text="Ground Level:"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_wind_speed_lbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_location"
        android:id="@+id/tv_day_lbl"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_humidity_lbl"
        android:text="Humidity:"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pressure_lbl"
        android:layout_marginRight="163dp"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/tv_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="0%"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="0.449" />

    <TextView
        android:id="@+id/tv_pressure_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure:"
        app:layout_constraintTop_toTopOf="@+id/tv_main_state"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="72dp"
        android:layout_marginRight="162dp" />

    <TextView
        android:id="@+id/tv_wind_speed_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind Speed:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_humidity"
        android:layout_marginTop="13dp"
        android:layout_marginRight="5dp"
        app:layout_constraintHorizontal_bias="0.537" />

    <TextView
        android:id="@+id/tv_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="40mph"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/tv_temp_main_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_state"
        app:layout_constraintHorizontal_bias="0.545"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/tv_temp_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30c"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_state"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/tv_ground_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="150m"
        app:layout_constraintTop_toBottomOf="@+id/tv_wind_speed"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/tv_sea_level_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sea Level:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ground_level"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="4dp" />

    <TextView
        android:id="@+id/tv_sea_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100m"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ground_level"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_five_day_list"
        android:layout_width="378dp"
        android:layout_height="130dp"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ground_level_lbl" />

</android.support.constraint.ConstraintLayout>